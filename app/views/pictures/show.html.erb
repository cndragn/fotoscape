
<div class="row">

	<div class="col-md-4">

		<span class="city-pics"> <%= image_tag @picture.pic_img.url(:pic_show), class: "picture-show" %></span>

	</div>

	<div class="col-md-8">

		<div class="book-info">

			<h2 class="book-title"><%= @picture.title %></h2>
			<span class="number-of-reviews"><%= @picture.comments.count %> comments</span>
			<p class="book-desc"><%= @picture.url %></p>

		</div>
	</div>


</div>

<div class="row">

	<div class="col-md-4">

		<div class="reviews">

			<!-- Where the reviews/ratings will go -->
			<h1>Comments</h1>
			<%= render @picture.comments %>

			<div>
				<%= link_to "Add Review", new_picture_comment_path(@picture), class: "btn-custom" %>
			</div>

		</div>

	</div>

</div>

<div class="links btn-group">

	<%= link_to "Back", root_path, class: "btn btn-custom" %>

	<% if user_signed_in? %>

		<% if @picture.user_id == current_user.id %>

			<%= link_to "Edit", edit_picture_path(@picture), class: "btn btn-custom" %>
			<%= link_to "Delete", picture_path(@picture), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

		<% end %>

	<% end %>

</div>
