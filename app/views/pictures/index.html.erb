<style media="screen">
#custom-search-input {
      margin:0;
      margin-top: 10px;
      padding: 0;
  }

  #custom-search-input .search-query {
      padding-right: 3px;
      padding-right: 4px \9;
      padding-left: 3px;
      padding-left: 4px \9;
      /* IE7-8 doesn't have border-radius, so don't indent the padding */

      margin-bottom: 0;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;
  }

  #custom-search-input button {
      border: 0;
      background: none;
      /** belows styles are working good */
      padding: 2px 5px;
      margin-top: 2px;
      position: relative;
      left: -28px;
      /* IE7-8 doesn't have border-radius, so don't indent the padding */
      margin-bottom: 0;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;
      color:#D9230F;
  }

  .search-query:focus + button {
      z-index: 3;
  }

  a img:hover{ position: relative;
             top: -8px;}


</style>



<div class="search">
  <h1>You know you're in <span><%= @cityQuery %></span> when...</h1>
  <p>...you experience its distinct landmarks, cuisine and skyline.</p>
  <p>Search FOTOSCAPE for your favorite city or discover somewhere new!</p>

  <div class="citySearch">
    <input value="Explore A City" id="find_city" type="text" class="validate" name="select[city]">


    <a class='dropdown-button btn' href='#' data-activates='category'>Category<i class="material-icons">arrow_drop_down</i></a>


    <ul id='category' class='dropdown-content'>
      <li><a href="#!">Landmarks</a></li>
      <li><a href="#!">Skyline</a></li>
      <li><a href="#!">Cuisine</a></li>
      <li><a href="#!">Neighborhoods</a></li>
      <li><a href="#!">Weather</a></li>
    </ul>

    <a class="btn">Search</a>

  </div>
</div>

<div class="container">

 <div class="city-pics">
   <% @flickrsearch.sample(12).each do |f| %>
   <a class="col-md-4 col-sm-6 col-xs-12"><%= image_tag f %></a>
   <% end %>
   <% @pictures.each do |picture| %>
     <a class="col-md-4 col-sm-6 col-xs-12" href="/pictures/<%= picture.id %>">
       <%= image_tag picture.pic_img.url(:pic_index), class: "book" %>
     </a>

   <% end %>
 </div>

</div>


